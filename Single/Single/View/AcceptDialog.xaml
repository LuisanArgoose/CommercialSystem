<Window x:Class="Single.View.AcceptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Single.View"
        mc:Ignorable="d"
        Title="Подтвердите действие" Height="215" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Width="160">
            <TextBlock x:Name="Message" HorizontalAlignment="Center"/>
            <Button Content="Подтвердить" Margin="5" Click="Accept"/>
            <Button Content="Отменить" Margin="5" Click="Decline"/>
        </StackPanel>
    </Grid>
</Window>
